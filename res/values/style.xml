<resources>
    <!-- Base application theme is the default theme. -->
    <style name="Theme"
           parent="android:style/Theme" />
    <style name="Theme.Xcusem" parent="android:style/Theme.Holo.Light.NoActionBar"></style>

    <style name="Xcusem"/>

    <style name="Xcusem.text"/>

    <style name="Xcusem.text.main"/>

    <style name="Xcusem.text.main.header">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Xcusem.text.main.title">
        <item name="android:textColor">#ffeb3b</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Xcusem.text.main.white">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/text_white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Xcusem.text.main.white.small">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/text_white_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Xcusem.text.main.white.small.twolines">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/text_white_small_two_lines</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Xcusem.text.main.footer"/>

    <style name="Xcusem.text.main.footer.big">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/text_footer_big</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Xcusem.text.main.footer.normal">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">@dimen/text_footer_normal</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>